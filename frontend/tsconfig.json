{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx", // For React 17+ or "react" for older versions
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": ["node_modules/@types"], // Ensures TypeScript finds type definitions
      "types": ["react", "node"] // Explicitly include React types
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  